@model MyBlog.Entities.Tag

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Yeni Etiket Ekle";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Yeni Etiket Ekle</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Etiket Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Etiket adını girin" required />
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="mb-3">
                    <label class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Açıklama (opsiyonel)"></textarea>
                </div>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-plus"></i> Ekle
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </form>
        </div>
    </div>
</div>
