<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Bilge Adam Blog</title>
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="/css/sb-admin-2.css" rel="stylesheet">
    <style>
        /* Genel Arka Plan */
        body {
            background-color: #f8f9fc;
        }
        /* Navbar İçin Özel Stil */
        .navbar-custom {
            background: linear-gradient(90deg, #4e73df 0%, #224abe 100%);
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #fff;
            }

                .navbar-custom .nav-link:hover {
                    color: #d1d3e2;
                }
        /* Navbar Toggler İkonu */
        .navbar-toggler-icon {
            filter: brightness(0) invert(1);
        }
        /* Footer Stil */
        .footer {
            background-color: #fff;
            border-top: 1px solid #e3e6f0;
            color: #858796;
        }
    </style>
</head>
<body>
    <!-- Navbar Başlangıç -->
    <nav class="navbar navbar-expand-lg navbar-custom shadow-sm sticky-top">
        <div class="container-fluid">
            <!-- Marka ve Toggler -->
            <a class="navbar-brand" href="/">
                <i class="fas fa-book-open"></i> <strong>Bilge Adam Blog</strong>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavLinks" aria-controls="navbarNavLinks"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigasyon Linkleri (sol taraf) -->
            <div class="collapse navbar-collapse" id="navbarNavLinks">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Posts">Tüm Yazılar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">Hakkımızda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">İletişim</a>
                    </li>
                </ul>
            </div>

            <!-- Giriş Yap Butonu (sağda sabit) -->
            <div class="d-flex ms-auto">
                <a class="btn btn-outline-light" asp-controller="Login" asp-action="Index">
                    <i class="fas fa-sign-in-alt"></i> Giriş Yap
                </a>
            </div>
        </div>
    </nav>
    <!-- Navbar Bitiş -->
    <!-- Ana İçerik -->
    <main class="container my-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer py-3">
        <div class="container text-center">
            <small>© 2025 - Bilge Adam Blog | Tüm Hakları Saklıdır.</small>
        </div>
    </footer>

    <!-- Scriptler -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/js/sb-admin-2.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
