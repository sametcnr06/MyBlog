@model MyBlog.Models.ViewModels.KullaniciDuzenleViewModel

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml"; // Admin layout dosyası
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Kullanıcı Düzenle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Duzenle" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <!-- Ad -->
                <div class="mb-3">
                    <label for="FirstName" class="form-label">Ad:</label>
                    <input type="text" asp-for="FirstName" class="form-control" required />
                </div>

                <!-- Soyad -->
                <div class="mb-3">
                    <label for="LastName" class="form-label">Soyad:</label>
                    <input type="text" asp-for="LastName" class="form-control" required />
                </div>

                <!-- E-Posta -->
                <div class="mb-3">
                    <label for="Email" class="form-label">E-Posta:</label>
                    <input type="email" asp-for="Email" class="form-control" required />
                </div>

                <!-- Kullanıcı Adı -->
                <div class="mb-3">
                    <label for="UserName" class="form-label">Kullanıcı Adı:</label>
                    <input type="text" asp-for="UserName" class="form-control" required />
                </div>

                <!-- Aktif mi? -->
                <div class="mb-3">
                    <label for="IsActive" class="form-label">Aktif mi?</label>
                    <select asp-for="IsActive" class="form-control">
                        <option value="true">Evet</option>
                        <option value="false">Hayır</option>
                    </select>
                </div>

                <!-- Profil Fotoğrafı -->
                <div class="mb-3">
                    <label for="ProfilePhoto" class="form-label">Profil Fotoğrafı:</label>
                    <input type="file" name="ProfilePhoto" class="form-control" />
                    @if (!string.IsNullOrEmpty(Model.ProfilePhotoPath))
                    {
                            <p>Mevcut Fotoğraf:</p>
                            <img src="@Model.ProfilePhotoPath" alt="Profil Fotoğrafı" style="width: 150px; height: 150px; border-radius: 50%;" />
                    }
                </div>

                <hr />

                <!-- Şifre Değiştirme -->
                <h5>Şifre Değiştirme (Opsiyonel)</h5>
                <div class="mb-3">
                    <label for="NewPassword" class="form-label">Yeni Şifre:</label>
                    <input type="password" asp-for="NewPassword" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="ConfirmPassword" class="form-label">Şifre Tekrar:</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="KullaniciListesi" class="btn btn-secondary me-3">
                        <i class="fas fa-arrow-left me-2"></i>İptal
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i>Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
