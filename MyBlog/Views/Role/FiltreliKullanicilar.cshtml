@model List<MyBlog.Models.ViewModels.UserViewModel>

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Filtrelenmiş Kullanıcılar";
}

<div class="container mt-4">
    <h2 class="text-primary">@ViewBag.SelectedRole Rolündeki Kullanıcılar</h2>

    <table class="table table-bordered">
        <thead class="bg-primary text-white">
            <tr>
                <th>Kullanıcı Adı</th>
                <th>E-posta</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-muted text-center">Bu role ait kullanıcı bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-outline-secondary mt-3">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>
