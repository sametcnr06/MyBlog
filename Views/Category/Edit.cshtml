@model MyBlog.Entities.Category

@{
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Admin/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Editor/_EditorLayout.cshtml";
    }
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0">Kategori Düzenle</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()

                <!-- Kategori ID (Gizli) -->
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="CategoryName" class="form-label">Kategori Adı</label>
                    <input asp-for="CategoryName" class="form-control" required />
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <button type="submit" class="btn btn-warning text-white">
                    <i class="fas fa-save"></i> Güncelle
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </form>
        </div>
    </div>
</div>
